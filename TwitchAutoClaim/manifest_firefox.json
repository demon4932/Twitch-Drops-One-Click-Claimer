{
  "manifest_version": 2,
  "name": "Twitch Drops Auto Claimer",
  "version": "1.0",
  "description": "Automatically claim all available Twitch drops with one click",
  "permissions": [
    "activeTab",
    "https://www.twitch.tv/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "twitch-drops-claimer@example.com",
      "strict_min_version": "91.0"
    }
  }
}